// SCROLLBAR
.q-scrollarea__thumb
  background-color #00000033 !important
  width 8px !important

// LINKS
a, a:hover, a:focus
  color var(--q-color-primary) !important
  text-decoration none

// NOTIFICATIONS
.q-notifications__list--top
  margin-top 10px !important
  z-index 0 !important
  margin-left 70px !important
  align-items flex-start !important

.q-notifications__list--bottom
  margin-bottom 20px !important
  z-index 9999 !important
  margin-left 70px !important
  align-items flex-start !important

.q-notification
  width var(--container-width) !important
  max-width 100% !important
  padding-left 25px !important
  padding-right 25px !important
  box-shadow none !important
  height 38px !important
  border-radius 0 !important
  border-bottom-left-radius 27px !important
  border-bottom-right-radius 27px !important
.q-notification__wrapper
  width 100% !important


.q-notification__actions
  padding 0 !important

.q-notification__actions >>> i
  font-size 112px !important

.q-notification__message
  text-align center !important

// CARROUSEL
.q-carousel__control
  margin 0 0 !important
  bottom 20px !important

.q-carousel__navigation-icon
  color $internal-bg !important
  margin-left  0 !important
  margin-right  0 !important
  opacity 1 !important
  i
    font-size 10px !important


.q-carousel__navigation-icon--active
  color var(--q-color-primary) !important

// TOOGLE
.q-toggle__inner--falsy
  .q-toggle__track
    color $disabled !important
  .q-toggle__thumb
    left 13px !important

.q-toggle__inner--truthy
  .q-toggle__track

  .q-toggle__thumb
    left 31px !important

.q-toggle__track
  opacity 1 !important
  height 20px !important
  width 38px !important
  border-radius: 10px !important

.q-toggle__thumb
  color white !important
  width 18px !important
  height 18px !important
  top 14px !important

// FIELDS
.q-field--rounded .q-field__control
  border-radius $button-rounded-border-radius !important

// SELECT
.q-select.q-field--outlined
  .q-field__inner
    .bg-internal-bg
      padding-left 20px !important
    .bg-internal-bg:before
      border 0 !important

.q-select__dropdown-icon
  font-size: 16px !important
  margin-right 8px !important
  margin-top 2px !important

// DIALOG
.q-dialog
  z-index: 7777


// TOOLTIP
.q-tooltip
  background-color var(--q-color-primary) !important
  border-radius 10px !important
  font-size 13px !important
  font-family Source Sans Pro, sans-serif !important
  padding 9px 16px !important
  max-width 250px !important

// TAB
.q-tabs
  border-bottom 1px solid #cbcdd1
.q-tab
  padding: 0
  margin-right 80px
.q-tab .q-focus-helper
  display none !important
.q-tab--active .q-tab__label
  font-size 15px
  font-weight 900
.q-tab__indicator
  height 7px

.q-date__calendar-item
  margin 6px 0px
.q-date__calendar-item--in
  color var(--q-color-primary) !important
  .q-btn
    color var(--q-color-secondary)
    border: 1px solid  var(--q-color-secondary);
    border-radius: 50% !important

  .bg-primary
    background var(--q-color-secondary) !important


.q-date__range-from:before
  background-color var(--q-color-primary)!important
  opacity 1 !important
  left 50% !important
  top 0px !important
  bottom 0px !important

.q-date__range-to:before
  background-color var(--q-color-primary)!important
  opacity 1 !important
  right 50% !important
  top 0px !important
  bottom 0px !important

.q-date__range
  opacity 1 !important
  color white !important
  background-color var(--q-color-primary)!important

.q-date__range:before
  opacity 0.7 !important
  background-color var(--q-color-primary)!important
  color white !important

.q-avatar
  -webkit-mask-image: -webkit-radial-gradient(white, black);

.q-btn.disabled
  opacity: 0.5 !important;
